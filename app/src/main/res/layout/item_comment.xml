<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/comment_root">

    <TextView
        android:id="@+id/user_name_of_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/mochiy"
        android:text="Shagil"
        android:textColor="@color/bee_yellow"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/comment_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/user_name_of_comment"
        android:fontFamily="@font/abeezee"
        android:text="hiiiiiiiiiiiiiiii"
        android:textSize="14sp" />

    <!--<ImageView
        android:id="@+id/delete_comment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_toStartOf="@id/edit_comment_btn"
        android:layout_alignParentTop="true"
        android:layout_margin = "10dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/edit_comment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin = "10dp"
        android:visibility="gone"/>-->

    <ImageView
        android:id="@+id/more_comment_options_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_more_vert_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_comment_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_centerVertical="true"
        android:fontFamily="@font/abeezee"
        android:text="Type your comment..."
        android:textSize="14sp"
        android:layout_toEndOf="@id/user_name_of_comment"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/send_edited_comment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/edit_comment_edittext"
        android:src="@drawable/ic_baseline_send_24"
        android:visibility="gone"/>

</RelativeLayout>